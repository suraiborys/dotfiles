theme = Catppuccin Frappe
copy-on-select = clipboard

# Font configuration
font-family = "Hack Nerd Font Mono"
font-size = 14

# Launch tmux by default (with auto-restore via continuum)
command = tmux attach || tmux

# Quick Terminal configuration
keybind = global:cmd+shift+space=toggle_quick_terminal
quick-terminal-position = center
quick-terminal-size = 80%,80%
quick-terminal-autohide = true
quick-terminal-animation-duration = 0.2

# Config reload keybind (use within ghostty)
keybind = cmd+shift+r=reload_config
